<mvc:View controllerName="br.com.fortlev.cadmaterial.cadmaterial.controller.Detalhes" 
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:f="sap.ui.layout.form"
          xmlns:l="sap.ui.layout"
          xmlns:core="sap.ui.core"
          displayBlock="true">
        
    <Page title="{i18n>detalhesTitle}"
          showNavButton="true"
          navButtonPress=".onNavBack">
        <headerContent>
            <VBox visible="{global>/aprov}">
                <Button id="aprov"  text="Aprovar" visible="{newModel>/edit}"  press=".aprovPress" />
            </VBox>
            <VBox visible="{global>/edit}">
                <Button id="editar" text="Editar"  visible="{newModel>/edit}"  press=".editPress" />
            </VBox>
            <VBox visible="{global>/estorn}">
                <Button id="estorn" text="Estornar" visible="{newModel>/edit}"  press=".estornPress" />
            </VBox>
            <VBox visible="{global>/retorn}">
                <Button id="retorn" text="Retornar" visible="{newModel>/edit}"  press=".retornPress" />
            </VBox>
            <VBox visible="{global>/save}">
                <Button id="save"   text="Salvar" visible="{newModel>/save}" press=".savePress" />
            </VBox>
            <VBox visible="{global>/save}">
                <Button id="cancel" text="Cancelar"  visible="{newModel>/save}" press=".cancPress" />
            </VBox>
		</headerContent>
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm id="gerais" editable="false" layout="ColumnLayout"
                    title="Dados Gerais"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <Label text="ID do Processo" />
                    <Input editable="false" value="{cad>/IdProc}" />
                    <Label text="Solicitante" />
                    <Input editable="false" value="{cad>/Usuario}" />
                    <Label text="Aprovador" />
                    <Input editable="false" value="{cad>/Aprovador}" />
                    <Label text="Data da Solicitação" />
                    <Input editable="false" value="{cad>/Datum}" />
                    <Input editable="false" value="{cad>/Timlo}">
                        <layoutData>
                            <l:GridData span="XL3 L4 M5 S5" />
                        </layoutData>
                    </Input>
                    <Label text="Status" />
                    <Input editable="false" value="{cad>/Status}" />
                    <Label text="N° Material" />
                    <Input editable="false" value="{cad>/Matnr}" />
                </f:SimpleForm>
                <f:SimpleForm id="basicos" editable="{newModel>/editable}" layout="ColumnLayout"
                    title="Dados Básicos"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="1"
                    singleContainerFullSize="false">
                    <f:content>
                        <Label text="Tipo do Material" />
                        <ComboBox items="{path: '/TipoMatSet', sorter: { path: 'Mtart' }, length: '500'}" id="tipoMat" editable="{newModel>/editable}" selectedKey="{cad>/Mtart}">
                            <core:ListItem text="{Mtart} - {Mtbez}" key="{Mtart}"/>
                        </ComboBox>
                        <Label text="Unidade de Medida" />
                        <ComboBox items="{path: '/UMBasicaSet', sorter: { path: 'Msehi' }, length: '500'}" id="UMBasica" editable="{newModel>/editable}" selectedKey="{cad>/Meins}">
                            <core:ListItem text="{Msehi} - {Msehl}" key="{Msehi}"/>
                        </ComboBox>
                        <Label text="Grupo de Mercadorias" />
                        <ComboBox items="{path: '/GMERCSet', sorter: { path: 'Matkl' }, length: '500'}" id="grupoMerc" editable="{newModel>/editable}" selectedKey="{cad>/Matkl}">
                            <core:ListItem text="{Matkl} - {Wgbez}" key="{Matkl}"/>
                        </ComboBox>
                        <Label text="Classe de Avaliação" />
                        <ComboBox items="{path: '/CAvalSet', sorter: { path: 'Bklas' }, length: '500'}" id="classAval" editable="{newModel>/editable}" selectedKey="{cad>/Bklas}">
                            <core:ListItem text="{Bklas} - {Bkbez}" key="{Bklas}"/>
                        </ComboBox>

                        <Label text="Peso Liquido/U.M" />
                        <Input editable="{newModel>/editable}" value="{cad>/Ntgew}"></Input>
                        <ComboBox items="{path: '/UMPesoSet', sorter: { path: 'Msehi' }, length: '500'}" id="UMPeso1" editable="{newModel>/editable}" selectedKey="{cad>/Gewei}">
                            <core:ListItem text="{Msehi} - {Msehl}" key="{Msehi}"/>
                            <layoutData>
                                <l:GridData span="XL1 L2 M3 S3" />
                            </layoutData>
                        </ComboBox>
                        <Label text="Peso Bruto/U.M" />
                        <Input editable="{newModel>/editable}" value="{cad>/Brgew}"></Input>
                        <ComboBox items="{path: '/UMPesoSet', sorter: { path: 'Msehi' }, length: '500'}" id="UMPeso2" editable="{newModel>/editable}" selectedKey="{cad>/Gewei}">
                            <core:ListItem text="{Msehi} - {Msehl}" key="{Msehi}"/>
                            <layoutData>
                                <l:GridData span="XL1 L2 M3 S3" />
                            </layoutData>
                        </ComboBox>
                        <Label text="Volume/U.M" />
                        <Input editable="{newModel>/editable}" value="{cad>/Volum}">
                        </Input>
                        <ComboBox items="{path: '/UMVolumeSet', sorter: { path: 'Msehi' }, length: '500'}" id="UMVolume" editable="{newModel>/editable}" selectedKey="{cad>/Voleh}">
                            <core:ListItem text="{Msehi} - {Msehl}" key="{Msehi}"/>
                            <layoutData>
                                <l:GridData span="XL1 L2 M3 S3" />
                            </layoutData>
                        </ComboBox>
                    </f:content>
                </f:SimpleForm>
                <f:SimpleForm id="descricoes" editable="{newModel>/editable}" layout="ResponsiveGridLayout"
                    title="Descrições">
                    <f:content>
                        <Label text="Descrição Breve" />
                        <Input editable="{newModel>/editable}" maxLength="40" value="{cad>/Maktx}" />
                        <Label text="Descrição Longa" />
                        <TextArea editable="{newModel>/editable}" width="100%" maxLength="1000" value="{cad>/TextoLongo}" />
                    </f:content>
                </f:SimpleForm>
                <f:SimpleForm
                     id="engenharia"
                    editable="{newModel>/editable}"
                    layout="ColumnLayout"
                    title="Engenharia"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <Label text="Descrição Curta" />
                        <Input
                            editable="{newModel>/editable}"
                            value="{engenharia>/Descricao}"
                            maxLength="40"
                            required="true"
                        />
                        <Label text="Descrição Detalhada" />
                       
                        	<TextArea value="{engenharia>/DescricaoLonga}"  width="100%"  editable="{newModel>/editable}"/>
                         <Label text="Unidade de Medida" />
                        <ComboBox
                            items="{path: '/UMBasicaSet', sorter: { path: 'Msehi' }, length: '500'}"
                            id="UMBasicaEngenharia"
                            editable="{newModel>/editable}"
                            selectedKey="{engenharia>/UnidMedida}"
                        >
                            <core:ListItem
                                text="{Msehi} - {Msehl}"
                                key="{Msehi}"
                            />
                        </ComboBox>
                          <Label text="Grupo de Mercadorias" />
                        <ComboBox
                            items="{path: '/GMERCSet', sorter: { path: 'Matkl' }, length: '500'}"
                            id="grupoMercEngenharia"
                            editable="{newModel>/editable}"
                            selectedKey="{engenharia>/Matkl}"
                        >
                            <core:ListItem
                                text="{Matkl} - {Wgbez}"
                                key="{Matkl}"
                            />
                        </ComboBox>
                         <Label text="Arquivos eletrônicos" />
                        <Input
                            editable="{newModel>/editable}"
                            value="{engenharia>/CodMaterialEngenharia}"
                        />
                         <Label text="Tipo do Material" />
                        <Select
                            id="tipoMatEngenharia"
                            editable="{newModel>/editable}"
                            selectedKey="{engenharia>/TipoMaterial}"
                        >
                            <items>
                            <core:Item
                                    text=""
                                    key="Blank"
                                />
                                <core:Item
                                    text="ZIBE - Consumo"
                                    key="ZIBE"
                                />
                                <core:Item
                                    text="ZRSA - Peças Reposição"
                                    key="ZRSA"
                                />
                                <core:Item
                                    text="NLAG - Imobilizado"
                                    key="NLAG"
                                />
                                <core:Item
                                    text="ROH  - Matéria-Prima"
                                    key="ROH"
                                />
                                <core:Item
                                    text="VERP - Embalagens"
                                    key="VERP"
                                />
                            </items>
                        </Select>
                        <Label text="Aplicação (utilização)" />
                        <Input
                            editable="{newModel>/editable}"
                            value="{engenharia>/Aplicacao}"
                        />
                        <Label text="Cor" />
                        <Input
                            editable="{newModel>/editable}"
                            value="{engenharia>/Cor}"
                        />
                        <Label text="Fabricante" />
                        <Input
                            editable="{newModel>/editable}"
                            value="{engenharia>/Fabricante}"
                        />
                           <Label text="Referência Fabricante " />
                        <Input
                            editable="{newModel>/editable}"
                            value="{engenharia>/RefFabricante}"
                        />
                           <Label text="Altura" />
                        <Input
                        type="Number"
                            editable="{newModel>/editable}"
                            value="{engenharia>/Comprimento}"
                        />
                           <Label text="Largura" />
                        <Input
                        type="Number"
                            editable="{newModel>/editable}"
                            value="{engenharia>/Largura}"
                        />
                           <Label text="Comprimento" />
                        <Input
                        type="Number"
                            editable="{newModel>/editable}"
                            value="{engenharia>/Altura}"
                        />
                          <Label text="Espessura" />
                        <Input
                        type="Number"
                            editable="{newModel>/editable}"
                            value="{engenharia>/Espessura}"
                        />
                          <Label text="Diâmetro/Raio" />
                        <Input
                            type="Number"
                            editable="{newModel>/editable}"
                            value="{engenharia>/DiameterRadio}"
                        />
                        <Label text="Tensão" />
                        <Input
                            type="Number"
                            editable="{newModel>/editable}"
                            value="{engenharia>/Tensao}"
                        />
                        <Label text="Amperagem" />
                        <Input
                            type="Number"
                            editable="{newModel>/editable}"
                            value="{engenharia>/Amperagem}"
                        />
                        <Label text="Informações Complementares" />
                        <Input
                            editable="{newModel>/editable}"
                            value="{engenharia>/InfoComplementares}"
                        />
                        
                    </f:content>
                </f:SimpleForm>
                <f:SimpleForm id="fiscal" editable="true" layout="ResponsiveGridLayout"
                    title="Fiscal">
                    <f:content>
                        <Label text="NCM (TIPI)" />
                        <Input editable="{newModel>/editable}" maxLength="16" value="{cad>/Steuc}" />
                    </f:content>
                </f:SimpleForm>
                <f:SimpleForm id="outros" editable="{newModel>/editable}" layout="ResponsiveGridLayout"
                    title="Outros">
                    <f:content>
                        <Label text="Observação" />
                        <TextArea editable="{newModel>/editable}" width="100%" maxLength="200" value="{cad>/Observacao}" />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>